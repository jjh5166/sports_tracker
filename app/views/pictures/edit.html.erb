<div class="pic_show"><h2>Edit Photo</h2><br>

    <%= form_for (@pic, multipart: true) do |f| %>
        <p>Description:</p><br>
        <%= f.text_area :description, class: "desc_field" %><br>
        <br>
        <%= f.file_field :image, class: "add_pic"%>
        <br>
        <div class="pic-submit"><%= f.submit %></div>

    <%end%>
<br>
<%= link_to 'Delete Picture', picture_path, method: :delete %>
</div>